[Unit]
Description=Security Cloud ipfixcol
Documentation=man:ipfixcol
Documentation=https://github.com/CESNET/ipfixcol

[Service]
Type=forking
User=ipfixcol
Group=ipfixcol
WorkingDirectory=/var/lib/ipfixcol
StandardOutput=null
ExecStart=/usr/local/bin/ipfixcol -d -v 2

TimeoutStopSec=30
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
